    <!-- 회원정보조회 -->
    <select id="getUserById" resultType="com.minki.football.dto.user.UserReq">
        SELECT *
        FROM member
        WHERE username = #{username}
    </select>

    <!-- 회원정보수정 -->
    <update id="updateUser" parameterType="com.minki.football.dto.user.UserRes">
        update member
        set name = #{name},
            nickname = #{nickname},
            password = #{password},
            phone = #{phone}
        where username = #{username}
    </update>

    <!-- 회원정보삭제 -->
    <delete id="deleteUser" parameterType="String">
        delete member
        from member
        where username = #{username}
    </delete>

<!-- 아이디 중복 체크 -->
    <select id="idCheck" parameterType="String" resultType="Integer">>
        SELECT count(*)
        FROM member
        WHERE username = #{username}
    </select>


