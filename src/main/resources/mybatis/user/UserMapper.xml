    <!-- 회원가입 -->
    <insert id="insertUser" parameterType="com.minki.football.vo.UserVo"
            useGeneratedKeys="true" keyColumn="member_id" keyProperty="memberId">
        INSERT INTO member
            (username, name, nickname, password, birthday, gender, phone)
        VALUES
            (#{username}, #{name}, #{nickname}, #{password},#{birthday}, #{gender}, #{phone})
    </insert>

    <insert id="insertUserRole">
        INSERT INTO user_role
            (member_id, role_id)
        VALUES
            (#{memberId}, #{roleId})
    </insert>

